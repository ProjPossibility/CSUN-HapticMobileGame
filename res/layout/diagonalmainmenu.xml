<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >


    <ImageView android:layout_width="5dp" android:layout_height="fill_parent" android:layout_centerHorizontal="true"
               android:scaleType="centerInside" android:src="@android:color/darker_gray"
               android:layout_below="@+id/textAppName"
               android:id="@+id/separatorVertical"/>
    <ImageView android:layout_width="fill_parent" android:layout_height="5dp" android:layout_centerVertical="true"
               android:scaleType="centerInside" android:src="@android:color/darker_gray"
               android:id="@+id/separatorHorizontal"/>

    <Button android:id="@+id/butTimeAttack" android:layout_width="fill_parent" android:text="Time Attack\nMode"
            android:gravity="center" android:background="@android:color/transparent" android:textSize="25sp"
            android:textColor="#ffcccccc"                                                               android:contentDescription="Time Attack Mode"
            android:layout_above="@+id/separatorHorizontal" android:layout_toRightOf="@+id/separatorVertical"
            android:layout_height="fill_parent"/>
    <Button android:id="@+id/butSurvivalMode" android:layout_width="fill_parent" android:text="Puzzle\nMode"
            android:gravity="center" android:background="@android:color/transparent" android:textSize="25sp"
            android:textColor="#ffcccccc"                        android:contentDescription="Puzzle Mode"
            android:layout_above="@+id/separatorHorizontal" android:layout_toLeftOf="@+id/separatorVertical"
            android:layout_height="fill_parent"/>
    <Button android:id="@+id/butInstructions" android:layout_width="fill_parent" android:text="Tutorial"
            android:gravity="center" android:background="@android:color/transparent" android:textSize="25sp"
            android:textColor="#ffcccccc"                                                              android:contentDescription="Tutorial"
            android:layout_below="@+id/separatorHorizontal" android:layout_toLeftOf="@+id/separatorVertical"
            android:layout_height="fill_parent"/>
    <Button android:id="@+id/butResetUser" android:layout_width="fill_parent" android:text="Reset\nUser Type"
            android:gravity="center" android:background="@android:color/transparent" android:textSize="25sp"
            android:textColor="#ffcccccc"            android:contentDescription="Reset User Type"
            android:layout_below="@+id/separatorHorizontal" android:layout_toRightOf="@+id/separatorVertical"
            android:layout_height="fill_parent"/>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center"
              android:textStyle="bold" android:id="@+id/textAppName"
              android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:text="LockPick"
              android:textSize="30sp"/>

</RelativeLayout>

